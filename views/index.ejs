 <!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>CVV Schools</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <header>
    <nav>
      <a href="/">Home</a>
      <a href="/admin">Admin Dashboard</a>
    </nav>
    <h1>CVV Schools</h1>
    <img src="/images/logo.jpg" alt="CVV Logo" class="logo">
  </header>
  <main>
    <div class="school-list">
      <% schools.forEach(school => { %>
        <div class="school-card">
          <img src="<%= school.logo %>" alt="<%= school.name %> Logo">
          <h2><%= school.name %></h2>
          <a href="/school/<%= school._id %>" class="btn primary">View Details</a>
        </div>
      <% }) %>
    </div>
  </main>
</body>
</html>